<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/app_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:src="@mipmap/app_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:layout_marginTop="60dp"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/user"/>
        <EditText
            android:id="@+id/username_et"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="16sp"
            android:maxLines="1"
            android:textColor="@color/colorFontGray7"
            android:textColorHint="@color/colorFontGray3"
            android:background="@color/colorWhite"
            android:hint="请填写用户名"/>
        <ImageView
            android:id="@+id/phone_del_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="30dp"
            android:visibility="gone"
            android:paddingLeft="15dp"
            android:src="@mipmap/paw_del"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/colorDivider2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/paw"/>
        <EditText
            android:id="@+id/password_et"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:layout_marginRight="15dp"
            android:maxLines="1"
            android:textSize="16sp"
            android:textColor="@color/colorFontGray7"
            android:textColorHint="@color/colorFontGray3"
            android:layout_marginLeft="15dp"
            android:background="@color/colorWhite"
            android:inputType="textPassword"
            android:hint="请输入密码"/>
        <ImageView
            android:id="@+id/password_eye_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="30dp"
            android:paddingLeft="15dp"
            android:src="@mipmap/paw_see"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/colorDivider2"/>

    <TextView
        android:id="@+id/login_tv"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:text="登录"
        android:textSize="16sp"
        android:background="@drawable/login_btn_disable"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/forget_passwrod_tv"
        android:layout_width="wrap_content"
        android:text="忘记密码?"
        android:layout_gravity="right"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/colorFontGray7"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content" />
</LinearLayout>